{
    "semi": true,
    "singleQuote": false,
    "tabWidth": 2,
    "printWidth": 100,
    "plugins": [
        "prettier-plugin-solidity"
    ],
    "overrides": [
        {
            "files": "*.sol",
            "options": {
                "parser": "solidity-parse",
                "printWidth": 100,
                "tabWidth": 4,
                "singleQuote": false,
                "bracketSpacing": true
            }
        }
    ]
}